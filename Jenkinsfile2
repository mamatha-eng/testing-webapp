node{
def tomcatWeb = 'C:\\tomcat\\apache-tomcat-9.0.36\\webapps'
def tomcatBin = 'C:\\tomcat\\apache-tomcat-9.0.36\\bin'
def tomcatStatus = ''
stage('SCM Checkout'){
git'https://github.com/mamatha-eng/testing-webapp'
}
/*stage('Compile-package'){
